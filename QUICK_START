Use: 
$ make
$ make run-shell

l(ircbot_main). 
Pid = ircbot_main:start(["irc.freenode.net", 6667, "erlbot_test", ["#erlbot_test"]]). 
Pid ! {send_data, "PRIVMSG #erlbot_test :success"}.

% Load the CTCP plugin (responds to CTCP pings and CTCP version)
l(ctcp_plugin).
gen_event:add_handler(plugins, ctcp_plugin, []).

% To load the web page title extractor plugin
l('plugins.title').
gen_event:add_handler(plugins, 'plugins.title', []).

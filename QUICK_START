Use: 
$ cd src/
$ erlc *.erl
$ erl
l(main). 
Pid = main:start(["irc.freenode.net", 6667, "erlbot_test", ["#lugola", "#razmjenavjestina"]]). 
Pid ! {send_data, "PRIVMSG #lugola :success"}.

l(pong_plugin).
Pid ! {register_plugin, pong_plugin, [none]}.
l(ctcp_plugin).
Pid ! {register_plugin, ctcp_plugin, [none]}.
